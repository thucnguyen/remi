<div id="header">
  <h1>Funny Movies</h1>
  <div id="user_info">
    <% if user_signed_in? %>
      <%= current_user.email %>
      |
      <%= button_to "Share a movie", destroy_user_session_path, :method => :get %>
      |
      <%= button_to "Log out", destroy_user_session_path, :method => :get %>
    <% else %>
      <%= render "sessions/login"  unless devise_controller? %>
    <% end %>
  </div>
</div>
